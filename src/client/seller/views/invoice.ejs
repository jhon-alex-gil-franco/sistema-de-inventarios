                    </div>
                </div>

                <div id="Modal__list-payment" class="modal">
                    <div class="modal-dialog flex" role="document">
                        <div class="modal-content">
                            <div class="modal-header flex">
                                <h6>Abonos realizados</h6>
                            </div>
                            <div class="modal-body" id="container__table-listPaiment">
                            </div>
                            <div class="footer">

                            </div>
                        </div>
                    </div>
                </div>

            </main>
            <!-- Sidebar menu-->
            <%- include('./partials/sidebar') %>

                <%- include('./partials/footer') %>

